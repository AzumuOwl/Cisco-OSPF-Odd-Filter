R1
enable
configure terminal

interface e0/1
 ip address 192.168.10.1 255.255.255.0
 ip access-group BLOCKS in
 no shutdown

interface e0/0
 ip address 10.0.0.1 255.255.255.0
 no shutdown

router ospf 1
 network 192.168.10.0 0.0.0.255 area 0
 network 10.0.0.0 0.0.0.255 area 0

ip access-list extended BLOCKS
 deny icmp 192.168.10.1 0.0.0.254 192.168.20.0 0.0.0.255 echo
 permit ip any any

